<Window x:Class="TomorrowByTogether.Telas.DadosIncorretos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TomorrowByTogether.Telas"
        mc:Ignorable="d"
        Title="Dados Incorretos" Height="200" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="..\recursos\imagens\fundorosa.jfif"/>
        </Grid.Background>
        
  
        <Border BorderBrush="Brown" BorderThickness="2" Margin="10">
            
            <StackPanel>
                
                
                <TextBlock Text="DADOS INCORRETOS!" FontFamily="Georgia" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                <TextBlock Text="Preencha os dados corretamente, corrija os erros." HorizontalAlignment="Center" Margin="5"/>
                <TextBlock Text="Clique em sair para continuar a navegar no sistema." HorizontalAlignment="Center" Margin="5"/>
                <Button Content="SAIR" Width="100" HorizontalAlignment="Center" FontFamily="Georgia" BorderBrush="Transparent" Margin="10 50 0 0" Background="LightCoral"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>