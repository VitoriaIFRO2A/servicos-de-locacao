<Window x:Class="TomorrowByTogether.Telas.DadosCorretos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TomorrowByTogether.Telas"
        mc:Ignorable="d"
        Title="Dados Corretos" Height="200" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="..\recursos\imagens\fundorosa.jfif"/>
        </Grid.Background>


        <Border BorderBrush="#68D14F" BorderThickness="2" Margin="10">

            <StackPanel>


                <TextBlock Text="DADOS CORRETOS!" FontFamily="Georgia" Foreground="#2A9C01" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                <TextBlock Text="Clique em sair para continuar a navegar no sistema."  HorizontalAlignment="Center" Margin="5 50 0 0"/>
                <Button Content="SAIR" FontFamily="Georgia" Width="100" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="10 40 0 0" Background="#92E37C"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>